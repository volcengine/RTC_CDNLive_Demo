<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/dialog_live_users_bg">

        <TextView
            android:id="@+id/dialog_live_host_list"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="主播连线"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/dialog_live_host_pk_list"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dialog_voice_users_raise_indicator"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#4080FF"
            app:layout_constraintBottom_toBottomOf="@id/dialog_live_host_list"
            app:layout_constraintLeft_toLeftOf="@id/dialog_live_host_list"
            app:layout_constraintRight_toRightOf="@id/dialog_live_host_list" />

        <TextView
            android:id="@+id/dialog_live_host_pk_list"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="主播PK"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@id/dialog_live_host_list"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dialog_voice_users_listener_indicator"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#4080FF"
            app:layout_constraintBottom_toBottomOf="@id/dialog_live_host_pk_list"
            app:layout_constraintLeft_toLeftOf="@id/dialog_live_host_pk_list"
            app:layout_constraintRight_toRightOf="@id/dialog_live_host_pk_list" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_live_host_list_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="48dp"
            tools:listitem="@layout/item_live_users" />

        <TextView
            android:id="@+id/no_content_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无其他主播在线"
            android:textColor="#869093"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_voice_users_listener_indicator" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>