<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_live_users_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/live_interact_together"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/request_interact_btn"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/item_live_listener_option_selected_bg"
        android:text="@string/request_live"
        android:textAllCaps="false"
        android:textSize="16sp" />

</FrameLayout>