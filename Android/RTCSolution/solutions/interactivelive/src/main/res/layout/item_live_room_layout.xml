<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/create_live_room_item_bg"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/item_live_room_layout_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/room_avatar_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Q" />

    <TextView
        android:id="@+id/item_live_room_layout_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/item_live_room_layout_avatar"
        app:layout_constraintLeft_toRightOf="@id/item_live_room_layout_avatar"
        app:layout_constraintTop_toTopOf="@id/item_live_room_layout_avatar"
        tools:text="Bytedance" />

    <TextView
        android:id="@+id/item_live_room_layout_room_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_live_room_layout_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="16dp"
        tools:text="会议ID:  23422311" />

    <ImageView
        android:id="@+id/item_class_room_layout_room_status"
        android:layout_width="44dp"
        android:layout_height="20dp"
        android:src="@drawable/living_icon"
        app:layout_constraintLeft_toRightOf="@id/item_live_room_layout_room_id"
        app:layout_constraintTop_toTopOf="@id/item_live_room_layout_room_id"
        app:layout_constraintBottom_toBottomOf="@id/item_live_room_layout_room_id"
        android:layout_marginLeft="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>